<Window x:Class="WPF_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_2"
        mc:Ignorable="d"
        Title="Cancer" Height="350" Width="525">
    
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <TextBlock Margin = "3">Name: <TextBox x:Name="NameTextBox" Width="100" LostFocus="TextBox_LostFocus"></TextBox></TextBlock>
            <TextBlock Margin = "3">Length: <TextBox x:Name="LengthBox" Width="50" LostFocus="LengthBox_LostFocus"></TextBox> feet</TextBlock>
            <Button Margin="3" HorizontalAlignment="Center" Click="Button_Click">Calculate Hull Speed</Button>
            <TextBlock>
                <TextBlock>Hull speed: <TextBox x:Name="HullSpeedBox" Margin="3" Width="auto"></TextBox></TextBlock>
                <InlineUIContainer>
                    <TextBlock Text="Knots "/>
                </InlineUIContainer>
            </TextBlock>

        </StackPanel>
        <!--
        <Image x:Name=""></Image>
        -->

    </StackPanel>

</Window>

